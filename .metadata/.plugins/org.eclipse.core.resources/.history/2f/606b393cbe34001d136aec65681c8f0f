package sec4;

import java.util.Scanner;

public class ex7 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		boolean run = true;
		int balance = 0;
		int money = 0;
		int num = 0;
		while (run) {
			System.out.println("-------------------------------");
			System.out.println("1.예금  | 2.출금  | 3.잔고  | 4.종료");
			System.out.println("-------------------------------");
			System.out.print("선택>_");
			num = scanner.nextInt();

			switch (num) {
			case 1:
				System.out.print("예금액 >");
				money = scanner.nextInt();
				balance+=money;
			}

		}

	}

}
